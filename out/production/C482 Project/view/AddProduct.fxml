            <TextField fx:id="productIdText" editable="false" layoutX="100.0" layoutY="100.0" promptText="Auto Gen - Disabled" />
            <TextField fx:id="addProductNameText" layoutX="100.0" layoutY="135.0" />
            <TextField fx:id="addProductInvText" layoutX="100.0" layoutY="170.0" />
            <TextField fx:id="addProductPriceText" layoutX="100.0" layoutY="205.0" />
