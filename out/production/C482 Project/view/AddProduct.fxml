      <Button fx:id="removeAssociatedPart" layoutX="731.0" layoutY="556.0" mnemonicParsing="false" onAction="#removeAssociatedPartClicked" prefHeight="25.0" prefWidth="149.0" text="Remove Associated Parts" />
